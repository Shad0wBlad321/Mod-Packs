<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ideology</li>
    </mods>
    <match Class="PatchOperationAdd">
	<success>Always</success>
        <xpath>/Defs/MemeDef[defName="FleshPurity"]/requireOne</xpath>
        <value>
            <li>
				<li>WCE2_Torture_Abhorrent</li>
			</li>
        </value>
    </match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ideology</li>
    </mods>
    <match Class="PatchOperationAdd">
	<success>Always</success>
        <xpath>/Defs/MemeDef[defName="Raider"]/requireOne</xpath>
        <value>
            <li>
				<li>WCE2_Torture_HorribleInnocent</li>
				<li>WCE2_Torture_DontCare</li>
				<li>WCE2_Torture_RespectedGuilty</li>
				<li>WCE2_Torture_AlwaysRespected</li>
			</li>
        </value>
    </match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ideology</li>
    </mods>
    <match Class="PatchOperationAdd">
	<success>Always</success>
        <xpath>/Defs/MemeDef[defName="Supremacist"]/requireOne</xpath>
        <value>
            <li>
				<li>WCE2_Torture_DontCare</li>
				<li>WCE2_Torture_RespectedGuilty</li>
				<li>WCE2_Torture_AlwaysRespected</li>
			</li>
        </value>
    </match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ideology</li>
    </mods>
    <match Class="PatchOperationAdd">
	<success>Always</success>
        <xpath>/Defs/HediffDef[defName="WCE2_Lobotomized"]/disablesNeeds</xpath>
        <value>
            <li>
				<li>Suppression</li>
			</li>
        </value>
    </match>
	</Operation>

	
	
</Patch>

