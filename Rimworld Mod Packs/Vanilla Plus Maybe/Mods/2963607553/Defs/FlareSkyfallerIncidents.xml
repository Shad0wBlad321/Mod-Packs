<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="SkyfallerBase">
		<defName>BDMEtest_Skyfaller_LGISbombard</defName>
		<label>frag LGIS</label>
		<size>(1,1)</size>
		<graphicData>
			<texPath>Things/Skyfaller/LGIS_Bombardment</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<skyfaller>
			<ticksToImpactRange>150~300</ticksToImpactRange>
			<rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
			<shadowSize>(0.5, 0.5)</shadowSize>
			<explosionRadius>2.3</explosionRadius>
			<explosionDamage>Bomb</explosionDamage>
			<explosionDamageFactor>0.5</explosionDamageFactor>
		</skyfaller>
		<comps>
			<li Class="CompProperties_ThrownMoteEmitter">
				<mote>BDsWhiteSmoke</mote>
				<emissionInterval>0</emissionInterval>
				<offsetMin>(0, 0, 0)</offsetMin>
				<offsetMax>(0, 0, 0)</offsetMax>
				<rotationRate>-180~180</rotationRate>
			</li>
		</comps>
	</ThingDef>

	<IncidentDef>
		<defName>BDMEtest_Incident_LGISbombard</defName>
		<label>LGIS bombardment</label>
		<workerClass>BillDoorsFramework.IncidentWorker_DropThings</workerClass>
		<category>ShipChunkDrop</category>
		<baseChance>0</baseChance>
		<targetTags>
			<li>Map_PlayerHome</li>
			<li>Map_Misc</li>
		</targetTags>
		<modExtensions>
			<li Class="BillDoorsFramework.DropThingsExtension">
				<radius>5</radius>
				<countRange>7~10</countRange>
				<skyfallerDef>BDMEtest_Skyfaller_LGISbombard</skyfallerDef>
				<messageKey>BDsIncidents_LGISbombardment</messageKey>
				<possibleThings>
					<li>Filth_Dirt</li>
				</possibleThings>
			</li>
		</modExtensions>
	</IncidentDef>

	<IncidentDef>
		<defName>BDMEtest_MedEvac</defName>
		<label>med evac</label>
		<targetTags>
			<li>Map_PlayerHome</li>
			<li>Map_Misc</li>
		</targetTags>
		<workerClass>BillDoorsFramework.IncidentWorker_MedEvac</workerClass>
		<category>ShipChunkDrop</category>
		<baseChance>0</baseChance>
		<modExtensions>
			<li Class="BillDoorsFramework.DropThingsExtension">
				<radius>1</radius>
				<countRange>1~1</countRange>
				<skyfallerDef>BDMEtest_MedEvacShuttleIncoming</skyfallerDef>
				<messageKey>BDsIncidents_MedEvacShuttle</messageKey>
				<possibleThings>
					<li>Filth_Dirt</li>
				</possibleThings>
			</li>
		</modExtensions>
	</IncidentDef>
</Defs>