    <ThingDef ParentName="PlantBase">
        <defName>RG-TF_Plant_Cathedralis</defName>
        <label>cathedralis</label>
        <description>A large beautiful wildflower that grows in warmer climates.</description>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <Beauty>6</Beauty>
            <Nutrition>0.16</Nutrition>
        </statBases>
