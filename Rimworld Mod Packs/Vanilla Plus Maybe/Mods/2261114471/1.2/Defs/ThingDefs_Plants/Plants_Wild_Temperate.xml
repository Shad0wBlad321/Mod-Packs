    <ThingDef ParentName="BushBase">
        <defName>RG-TF_Plant_TemperateFern</defName>
        <label>fern</label>
        <description>A short shrub with long, fine leaves. Grows in forests in warmer areas.</description>
        <graphicData>
            <texPath>Things/Plant/Fern</texPath>
            <drawSize>1.15</drawSize>
            <shadowData>
                <volume>(0.55, 0.2, 0.2)</volume>
            </shadowData>
        </graphicData>
        <uiIconScale>0.85</uiIconScale>
        <plant>
            <growDays>3</growDays>
            <leaflessGraphicPath>Things/Plant/Leafless/Fern_Leafless</leaflessGraphicPath>
            <harvestWork>60</harvestWork>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>80</wildClusterWeight>
        </plant>
    </ThingDef>

    <ThingDef ParentName="PlantBase">
        <defName>RG-TF_Plant_TemperateMoss</defName>
        <label>Ivy</label>
        <description>Wild Ivy with leafs that grows in patches of leaves in areas of warm temperatures. Ivy takes a long time to grow, but is very frost-resistant.</description>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Flammability>0.6</Flammability>
            <Nutrition>0.15</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Plant/TemperateMoss</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <hideAtSnowDepth>0.5</hideAtSnowDepth>
        <ingestible />
        <plant>
            <fertilityMin>0.05</fertilityMin>
            <fertilitySensitivity>0.2</fertilitySensitivity>
            <growDays>15</growDays>
            <leaflessGraphicPath>Things/Plant/Leafless/TemperateMoss_Leafless</leaflessGraphicPath>
            <harvestWork>75</harvestWork>
            <maxMeshCount>4</maxMeshCount>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>8</wildClusterWeight>
            <visualSizeRange>0.9~1.5</visualSizeRange>
            <topWindExposure>0.3</topWindExposure>
            <wildOrder>1</wildOrder>
        </plant>
    </ThingDef>
	
    <ThingDef ParentName="PlantBase">
        <defName>RG-TF_Cibarius</defName>
        <label>cibarius</label>
        <description>A tiny yellow and very tasty mushroom growing in small clusters. It can be found exclusively in temperate biomes.</description>
        <graphicData>
            <texPath>Things/Plant/Cibarius</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.4</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.04</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>45</growDays>
            <maxMeshCount>4</maxMeshCount>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestYield>35</harvestYield>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RawFungus</harvestedThingDef>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.1</topWindExposure>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>
	
    <ThingDef ParentName="PlantBase">
        <defName>RG-TF_Alastairus</defName>
        <label>alastairus</label>
        <description>An strange blue mushroom that glows in the dark. Its size and glowing protrusions make this fungus beautiful to look at.</description>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <Beauty>8</Beauty>
            <Nutrition>0.2</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Plant/Alastairus</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.2, 0.3, 0.13)</volume>
                <offset>(-0.03,0,-0.44)</offset>
            </shadowData>
        </graphicData>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>30</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.01</fertilityMin>
            <fertilitySensitivity>0.10</fertilitySensitivity>
            <growDays>25</growDays>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestYield>15</harvestYield>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RG-TF_Alastair</harvestedThingDef>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.5~0.9</visualSizeRange>
            <topWindExposure>0.1</topWindExposure>
            <purpose>Beauty</purpose>
        </plant>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>6</glowRadius>
                <glowColor>(166,208,213,0)</glowColor>
            </li>
        </comps>
    </ThingDef>

</Defs>