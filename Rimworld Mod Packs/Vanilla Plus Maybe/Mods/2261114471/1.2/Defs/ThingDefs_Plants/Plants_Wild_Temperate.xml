<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="TreeBase">
        <defName>RG-TF_Plant_TreeCornish</defName>
        <label>cornish tree</label>
        <description>A large mediterranean conifer covered with tiny pine cones. It grows exclusively in temperate biomes.</description>
        <graphicData>
            <texPath>Things/Plant/TreeCornish</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.15, 0.3, 0.15)</volume>
                <offset>(0,0,-0.38)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>3</Beauty>
            <Nutrition>1.30</Nutrition>
        </statBases>
        <ingestible />
        <plant>
            <growDays>20</growDays>
            <visualSizeRange>1.1~2.8</visualSizeRange>
            <harvestWork>950</harvestWork>
            <harvestYield>25</harvestYield>
            <wildClusterWeight>25</wildClusterWeight>
        </plant>
    </ThingDef>

    <ThingDef ParentName="PlantBase">
        <defName>RG-TF_Plant_MountainDandelion</defName>
        <label>dandelions</label>
        <description>A tiny orange flower which grows in large clusters. Though it is often considered a weed, dandelions in bloom are quite beautiful.</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Beauty>4</Beauty>
            <Nutrition>0.18</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Plant/MountainDandelion</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <hideAtSnowDepth>0.5</hideAtSnowDepth>
        <ingestible />
        <plant>
            <fertilitySensitivity>0.0</fertilitySensitivity>
            <growDays>2.5</growDays>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <fertilityMin>0.05</fertilityMin>
            <maxMeshCount>25</maxMeshCount>
            <visualSizeRange>0.3~0.4</visualSizeRange>
            <topWindExposure>0.3</topWindExposure>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>8</wildClusterWeight>
            <wildOrder>1</wildOrder>
            <purpose>Beauty</purpose>
        </plant>
    </ThingDef>

