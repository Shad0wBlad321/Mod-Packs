<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>HRK_settings_GunNutFNSCAR</defName>
        <modId>Harkon.GunNut.FNSCAR</modId>
        <label>Gun Nut - FN SCAR</label>
