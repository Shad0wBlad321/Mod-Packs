 <!--========================================= Scarves =============================================-->
  
    		   <!-- Bandana -->
  
  <ThingDef ParentName="HatMakeableBase">
    <defName>RNApparel_ColdWar_Bandana</defName>
    <label>head bandana</label>
    <description>A kerchief (from the Old French couvrechief, "cover head"), also known as a bandana or bandanna, is a triangular or square piece of cloth tied around the head, face or neck for protective or decorative purposes.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Apparel/Headgear/Bandana/Bandana_Display</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.20</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MaxHitPoints>110</MaxHitPoints>
      <Mass>0.05</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
	  <ShootingAccuracyPawn>0.02</ShootingAccuracyPawn>
	  <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <apparel>
	<countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
	    <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Headgear/Bandana/Bandana</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>IndustrialAdvanced</li>
		<li>PassiveCamo_Colour_Set</li>
      </tags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(62, 82, 98)</only>
        </li>           
		<li>
          <weight>9</weight>
          <only>(73, 67, 54)</only>
        </li>        
		<li>
          <weight>8</weight>
          <only>(51, 47, 44)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(73, 67, 54)</only>
        </li>
        <li>
          <weight>4</weight>
          <min>(248, 72, 97)</min>
          <max>(123, 29, 27)</max>
        </li>          
		<li>
          <weight>5</weight>
          <min>(141, 120, 73)</min>
          <max>(195, 175, 150)</max>
        </li>    		
		<li>
          <weight>6</weight>
          <min>(101, 118, 66)</min>
          <max>(88, 101, 55)</max>
        </li>        
		<li>
          <weight>8</weight>
          <min>(255, 255, 255)</min>
          <max>(154, 154, 154)</max>
        </li>
        <li>
          <weight>5</weight>
          <only>(50, 53, 58)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
    
