	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_10x24mmCaseless</defName>
		<label>10x24mm Caseless</label>
		<ammoTypes>
			<Ammo_10x24mmCaseless_FMJ>Bullet_10x24mmCaseless_FMJ</Ammo_10x24mmCaseless_FMJ>
