	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base10x24mmCaselessBullet" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>185</speed>
			<dropsCasings>false</dropsCasings>
		</projectile>		
	</ThingDef>

	<ThingDef ParentName="Base10x24mmCaselessBullet">
		<defName>Bullet_10x24mmCaseless_FMJ</defName>
		<label>10x24mm caseless bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>16</damageAmountBase>
			<armorPenetrationSharp>10</armorPenetrationSharp>
			<armorPenetrationBlunt>34.18</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base10x24mmCaselessBullet">
		<defName>Bullet_10x24mmCaseless_Incendiary</defName>
		<label>10x24mm caseless bullet (AP-I)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>11</damageAmountBase>
			<armorPenetrationSharp>15</armorPenetrationSharp>
			<armorPenetrationBlunt>34.18</armorPenetrationBlunt>
			<secondaryDamage>
				<li>
					<def>Flame_Secondary</def>
					<amount>5</amount>
				</li>
			</secondaryDamage>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base10x24mmCaselessBullet">
		<defName>Bullet_10x24mmCaseless_HE</defName>
