<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 <!--================ Holo Bases ================-->

	<ThingDef Name="ClutterHoloBuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
	</ThingDef>
  
	<ThingDef Name="ClutterHoloBase" ParentName="ClutterHoloBuildingBase" Abstract="True">
		<minifiedDef>ClutterMinifiedFurniture</minifiedDef>
		<tradeTags>
			<li>Furniture</li>
		</tradeTags>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
	</ThingDef>
  
	<ThingDef Name="ClutterHoloWithQualityBase" ParentName="ClutterHoloBase" Abstract="True">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<recipeMaker>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>FurnitureAssembler</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>

	<ThingDef Name="ClutterArtableHoloBase" ParentName="ClutterHoloWithQualityBase" Abstract="True">
		<comps>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtFurniture</nameMaker>
				<descriptionMaker>ArtDescription_Furniture</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
	</ThingDef>
  
 	<!--================ Holo ================-->

 	<ThingDef Class="Clutter_Furniture.HoloBaseDefs" ParentName="ClutterArtableHoloBase">
		<defName>HoloEmitter</defName>
		<label>Holographic Emitter</label>
		<thingClass>Clutter_Furniture.HoloBase</thingClass>
		<category>Building</category>
		<graphicData>
			<shaderType>Transparent</shaderType>
			<texPath>Clutter/Holo/HoloOff</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<drawGUIOverlay>true</drawGUIOverlay>
		<passability>PassThroughOnly</passability>
		<statBases>
			<MarketValue>926</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.0</Flammability>
			<Beauty>8</Beauty>
			<Mass>15</Mass>
		</statBases>
		<costList>
			<Steel>80</Steel>
			<Silver>1</Silver>
			<Gold>1</Gold>
		</costList>
		<pathCost>60</pathCost>
		<tickerType>Normal</tickerType>
		<selectable>true</selectable>
		<description>Projects holograms of various things</description>
		<size>(1,1)</size>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
        		<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<rotatable>false</rotatable>
		<tradeTags>
      		<li>Exotic</li>
		</tradeTags>
		<ActiveTexturePath>Clutter/Holo/HoloOn</ActiveTexturePath>
		<HoloButtonPath>Clutter/Holo/HoloOn</HoloButtonPath>
		<HologramList>
			<li>HoloSciSign</li>
			<li>HoloFlyingDots</li>
			<li>HoloEkie</li>
		</HologramList>
		<researchPrerequisites>
			<li>ComfyTechTierIII</li>
		</researchPrerequisites>
		
		<building>
            <watchBuildingStandDistanceRange>2~7</watchBuildingStandDistanceRange>
            <watchBuildingStandRectWidth>7</watchBuildingStandRectWidth>
		</building>
		<recipeMaker>
			<workAmount>5000</workAmount>
			<researchPrerequisite>ComfyTechTierIII</researchPrerequisite>
	    </recipeMaker>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	</ThingDef>

	<ThingDef Class="Clutter_Furniture.ClutterHoloDefs">
		<defName>HoloFlyingDots</defName>
		<label>Hologram of flying dots</label>
		<category>Item</category>
		<thingClass>Clutter_Furniture.Holo</thingClass>
		<graphicData>
			<texPath>Clutter/Holo/Holo1/Frame1</texPath>
			<shaderType>Transparent</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Normal</tickerType>
		<tradeability>None</tradeability>
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>1200</WorkToBuild>
			<Beauty>10</Beauty>
		</statBases>
		<socialPropernessMatters>true</socialPropernessMatters>
		<size>1,1</size>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Glower">
				
				<glowRadius>2</glowRadius>
				<glowColor>(52,210,255,1)</glowColor>
			</li>
		</comps>
		<description>A holographic projection to pretty up the place.</description>
		<pathCost>80</pathCost>
		<altitudeLayer>Blueprint</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<FramePath>Clutter/Holo/Holo1/Frame</FramePath>
		<FrameCount>12</FrameCount>
		<building>
			<isEdifice>false</isEdifice>
            <joyKind>Hologram</joyKind>
            <watchBuildingStandDistanceRange>2~7</watchBuildingStandDistanceRange>
            <watchBuildingStandRectWidth>7</watchBuildingStandRectWidth>
    	</building>
	</ThingDef>
	
