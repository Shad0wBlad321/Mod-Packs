<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>HRK_settings_GunNutKelTec</defName>
        <modId>Harkon.GunNut.KRISSVector</modId>
        <label>Gun Nut - KRISS Vector</label>
        <settings>

            <li Class="XmlExtensions.Setting.Text">
                <text>Gun Nut - KRISS Vector</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>

            <!-- ========== CAMO SETTINGS ========== -->

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>CAMO SETTINGS</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Select a camo per gun, most of the time is just a simple color swap but in some cases some details may change, refer to the mod page to preview the options. This setting only affects the base gun and does not affect ideology styles.</text>
                <font>Tiny</font>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.SplitColumn">
                <gapSize>70</gapSize>
                <leftCol>

                    <li Class="XmlExtensions.Setting.Text">
                        <text>KRISS Vector</text>
                        <font>Small</font>
                        <anchor>Middle</anchor>
                    </li>

                    <li Class="XmlExtensions.Setting.Gap">
                        <spacing>2</spacing>
                    </li>

                    <li Class="XmlExtensions.Setting.RadioButtons">
                        <key>KRISSVectorGenI_Camo</key>
                        <defaultValue>HRK_KRISSVectorGenI_Tan</defaultValue>
                        <buttons>
                            <li>
                                <value>HRK_KRISSVectorGenI_Black</value>
                                <label>Black/Base</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorGenI_Tan</value>
                                <label>Tan/Desert</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorGenI_White</value>
                                <label>Snow/White</label>
                            </li>
                        </buttons>
                    </li>

                    <li Class="XmlExtensions.Setting.Gap"/>

                    <li Class="XmlExtensions.Setting.Text">
                        <text>KRISS Vector Gen.II</text>
                        <font>Small</font>
                        <anchor>Middle</anchor>
                    </li>

                    <li Class="XmlExtensions.Setting.Gap">
                        <spacing>2</spacing>
                    </li>

                    <li Class="XmlExtensions.Setting.RadioButtons">
                        <key>KRISSVectorGenII_Camo</key>
                        <defaultValue>HRK_KRISSVectorGenII_White</defaultValue>
                        <buttons>
                            <li>
                                <value>HRK_KRISSVectorGenII_Black</value>
                                <label>Black/Base</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorGenII_Tan</value>
                                <label>Tan/Desert</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorGenII_White</value>
                                <label>Snow/White</label>
                            </li>
                        </buttons>
                    </li>

                </leftCol>
                <rightCol>

                    <li Class="XmlExtensions.Setting.Text">
                        <text>KRISS Vector ACP</text>
                        <font>Small</font>
                        <anchor>Middle</anchor>
                    </li>

                    <li Class="XmlExtensions.Setting.Gap">
                        <spacing>2</spacing>
                    </li>

                    <li Class="XmlExtensions.Setting.RadioButtons">
                        <key>KRISSVectorACP_Camo</key>
                        <defaultValue>HRK_KRISSVectorACP_Black</defaultValue>
                        <buttons>
                            <li>
                                <value>HRK_KRISSVectorACP_Black</value>
                                <label>Black/Base</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorACP_Tan</value>
                                <label>Tan/Desert</label>
                            </li>
                            <li>
                                <value>HRK_KRISSVectorACP_White</value>
                                <label>Snow/White</label>
                            </li>
                        </buttons>
                    </li>

                </rightCol>
            </li>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Remember any change of the settings needs a restart to take effect.</text>
                <font>Tiny</font>
            </li>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>
            <li Class="XmlExtensions.Setting.Gap"/>

        </settings>
    </XmlExtensions.SettingsMenuDef>

</Defs>