<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
    <ThingDef Name="RH2_BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<statBases>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
  </ThingDef>

  
  <ThingDef Name="RH2_FurnitureBase" ParentName="RH2_BuildingBase" Abstract="True">
    <designationCategory>Furniture</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef Name="RH2_FurnitureWithQualityBase" ParentName="RH2_FurnitureBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="RH2_ArtableFurnitureBase" ParentName="RH2_FurnitureWithQualityBase" Abstract="True">
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef Name="RH2_ArtableFurnitureRegardlessOfQualityBase" ParentName="RH2_FurnitureWithQualityBase" Abstract="True">
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Awful</minQualityForArtistic>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

    <ThingDef ParentName="RH2_FurnitureBase" Name="RH2_BedBase" Abstract="True">
    <thingClass>Building_Bed</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
    <drawGUIOverlay>true</drawGUIOverlay>
    <canOverlapZones>false</canOverlapZones>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <passability>PassThroughOnly</passability>
    <defaultPlacingRot>South</defaultPlacingRot>
  </ThingDef>
  
  <ThingDef Name="RH2_BedWithQualityBase" ParentName="RH2_BedBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="RH2_ArtableBedBase" ParentName="RH2_BedWithQualityBase" Abstract="True">
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>
  
</Defs>
