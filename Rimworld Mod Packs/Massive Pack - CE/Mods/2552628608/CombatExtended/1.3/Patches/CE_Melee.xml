    <value>
      <tools>
        <li Class="CombatExtended.ToolCE">
          <label>handle</label>
          <capacities>
            <li>Poke</li>
          </capacities>
          <power>1</power>
          <cooldownTime>1.01</cooldownTime>
          <armorPenetrationBlunt>0.250</armorPenetrationBlunt>
          <linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
