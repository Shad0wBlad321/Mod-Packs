  <!-- HE -->
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AmmoBase">
    <thingClass>CombatExtended.AmmoThing</thingClass>
    <defName>Ammo_44x52mmChargedGrenades_HE</defName>
    <label>44x52mm Charge Grenade (HE)</label>
    <description>A tandem-warhead grenade used in charge grenade launchers.</description>
    <graphicData>
      <texPath>Things/Eccentric/Ammo/CGL/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.245</Mass>
      <Bulk>0.45</Bulk>
      <MarketValue>5.50</MarketValue>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo44x52mmChargedGrenades</li>
    </thingCategories>
    <stackLimit>500</stackLimit>
    <cookOffFlashScale>100</cookOffFlashScale>
    <ammoClass>GrenadeHE</ammoClass>
    <cookOffProjectile>Bullet_44x52mmChargedGrenades_HE</cookOffProjectile>
  </ThingDef>
  <!-- HE Recipe -->
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_44x52mmChargedGrenades_HE</defName>
    <label>make 44x52mm HE charge grenades x50</label>
    <description>Craft 50 44x52mm HE grenades.</description>
    <jobString>Making 44x52mm HE charge grenades.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>FSX</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_44x52mmChargedGrenades_HE>50</Ammo_44x52mmChargedGrenades_HE>
    </products>
  </RecipeDef>
  <!-- HE Projectile -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_44x52mmChargedGrenades_HE</defName>
    <label>44x52mm charge grenade (HE)</label>
    <thingClass>EccentricProjectiles.ProjectileCE_ExplosiveWithEffects</thingClass>
    <graphicData>
      <texPath>Things/Eccentric/Projectile/CGL1Projectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <speed>18</speed>
      <explosionRadius>1.0</explosionRadius >
      <damageDef>Bomb</damageDef>
      <damageAmountBase>24</damageAmountBase>
      <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
    </projectile>
    <comps>
      <li Class="CombatExtended.CompProperties_Fragments">
        <fragments>
          <Fragment_Small>12</Fragment_Small>
        </fragments>
      </li>
    </comps>
    <modExtensions>
      <li Class="EccentricProjectiles.ModExtension_ProjectileEffects">
        <effects>
          <li>Eccentric_ChargeGrenadeTrail</li>
        </effects>
      </li>
    </modExtensions>
  </ThingDef>

