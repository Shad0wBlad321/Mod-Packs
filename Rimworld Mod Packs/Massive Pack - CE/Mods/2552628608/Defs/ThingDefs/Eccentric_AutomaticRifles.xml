<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== E9C ==================== -->
  <ThingDef ParentName="BaseEccentricGun">
    <defName>Eccentric_Gun_E9C</defName>
    <label>E9C charge carbine</label>
    <description>The E9C charge carbine is a modified, short-barreled version of the full-sized E15 charge rifle.\n\nEquipped with a holographic sight, the E9C is smaller, lighter, and less bulky than the E15, but is less accurate at long range.</description>
    <graphicData>
      <texPath>Things/Eccentric/Weapons/E9C</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>

    <statBases>
      <WorkToMake>44000</WorkToMake>
      <Mass>4.2</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>2.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
      <Eccentric_HexCell>1</Eccentric_HexCell>
    </costList>

    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>

    <weaponTags>
      <li>EccentricRifle</li>
    </weaponTags>

    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EccentricChargeRifle</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>25.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

