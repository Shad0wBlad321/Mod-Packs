<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== E16 ==================== -->
  <ThingDef ParentName="BaseEccentricGun">
    <defName>Eccentric_Gun_E16PR</defName>
    <label>E16 precision charge rifle</label>
    <description>The E16 is a bolt-action charge rifle that fires powerful 8x35mm charge rounds with deadly precision.\n\nEquipped with a variable-zoom hybrid optic, the E16 is expensive and slow to build, but adds accurate, long-range fire to The Eccentric's arsenal.</description>
    <graphicData>
      <texPath>Things/Eccentric/Weapons/E16</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>

    <statBases>
      <WorkToMake>56000</WorkToMake>
      <Mass>6.4</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>2.7</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>70</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
      <Eccentric_HexCell>2</Eccentric_HexCell>
    </costList>

    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>

    <weaponTags Inherit="False">
      <li>EccentricRifle</li>
      <li>EccentricSniperRifle</li>
      <!-- The weaponTag method of adding bipods to CE doesn't currently work because of custom verbs. -->
      <!--<li>Bipod_DMR</li>-->
    </weaponTags>

    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EccentricSniperCharge</defaultProjectile>
        <warmupTime>3.4</warmupTime>
        <range>42.9</range>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps />
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>

