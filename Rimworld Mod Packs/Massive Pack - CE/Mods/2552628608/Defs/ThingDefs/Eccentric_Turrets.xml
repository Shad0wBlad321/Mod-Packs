  <!--=============== ACGL3 grenade launcher ===============-->
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>Eccentric_Gun_M3ACGL</defName>
    <label>ACGL3 grenade launcher</label>
    <description>An automatic, belt-fed grenade launcher.</description>
    <graphicData>
      <texPath>Things/Eccentric/Buildings/ACGL3-Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <statBases>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>40</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>EccentricProjectiles.Verb_ShootSelectableProjectile</verbClass>
        <defaultProjectile>Bullet_EccentricChargeGrenade</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>28.9</range>
        <minRange>5</minRange>
        <forcedMissRadius>1.9</forcedMissRadius>
        <ticksBetweenBurstShots>60</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="EccentricProjectiles.CompProperties_SelectableProjectile">
        <options>
          <li>
            <label>Solar</label>
            <labelLong>HE</labelLong>
            <description>Load high explosive rounds that deal damage to anything within the blast radius.</description>
            <uiIconPath>Things/Eccentric/Ammo/CGL/HE/HE_c</uiIconPath>
            <projectile>Bullet_EccentricChargeGrenade</projectile>
          </li>
          <li>
            <label>Lunar</label>
            <labelLong>EMP</labelLong>
            <description>Load electromagnetic pulse rounds that stun mechanoids and break shields.</description>
            <uiIconPath>Things/Eccentric/Ammo/CGL/EMP/EMP_c</uiIconPath>
            <projectile>Bullet_EccentricChargeGrenade_EMP</projectile>
          </li>
          <li>
            <label>Stellar</label>
            <labelLong>Smoke</labelLong>
            <description>Load smoke rounds that obscures targets and prevents turrets from locking onto targets.</description>
            <uiIconPath>Things/Eccentric/Ammo/CGL/Smoke/Smoke_c</uiIconPath>
            <projectile>Bullet_EccentricChargeGrenade_Smoke</projectile>
          </li>
        </options>
      </li>
    </comps>
  </ThingDef>

