  <EffecterDef>
    <defName>CP_Effecter_NERF</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_InteractSymbol</subEffecterClass>
        <moteDef>RH2_Mote_NERFGun</moteDef>
