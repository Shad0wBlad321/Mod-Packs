<Defs>
 
  <JobDef>
    <defName>CP_Job_NERF</defName>
    <driverClass>JoyFacilities.JobDriver_PlayAtJoyFacility</driverClass>
    <joyDuration>4000</joyDuration>
    <reportString>playing NERF.</reportString>
    <joyMaxParticipants>4</joyMaxParticipants>
    <joySkill>Shooting</joySkill>
    <joyXpPerTick>0.035</joyXpPerTick>
    <joyKind>Gaming_Dexterity</joyKind>
    <taleOnCompletion>PlayedGame</taleOnCompletion>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	<modExtensions>
		<li Class="JoyFacilities.JobExtension">
			<moteThrowObject>RH2_Mote_NERFDart</moteThrowObject>
			<throwIntervalTicks>120</throwIntervalTicks>
			<throwSoundDef>Bow_Small</throwSoundDef>
			<pawnEffecterDef>CP_Effecter_NERF</pawnEffecterDef>
		</li>
	</modExtensions>
  </JobDef>

  <JoyGiverDef>
    <defName>CP_JoyGiver_NERF</defName>
    <giverClass>JoyGiver_WatchBuilding</giverClass>
    <baseChance>2.5</baseChance>
    <thingDefs>
      <li>RH2_NERFTarget</li>
    </thingDefs>
    <jobDef>CP_Job_NERF</jobDef>
    <desireSit>false</desireSit>
    <joyKind>Gaming_Dexterity</joyKind>
    <requiredCapacities>
      <li>Sight</li>
      <li>Manipulation</li>
    </requiredCapacities>
  </JoyGiverDef>
  
