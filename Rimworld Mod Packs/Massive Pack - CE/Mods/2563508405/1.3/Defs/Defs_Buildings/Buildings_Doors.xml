<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--========================= Doors =============================-->
  
  
  <ThingDef ParentName="BuildingBase" Name="RH_Armored_DoorBase" Abstract="True">
    <thingClass>Building_Door</thingClass>
    <category>Building</category>
    <altitudeLayer>DoorMoveable</altitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>true</useHitPoints>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.4</Flammability>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <drawerType>RealtimeOnly</drawerType>
    <building>
      <isInert>true</isInert>
      <canPlaceOverWall>true</canPlaceOverWall>
      <soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
      <soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
      <soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
      <blueprintClass>Blueprint_Door</blueprintClass>
      <blueprintGraphicData>
        <texPath>Things/Building/Wall/Doors/ArmoredDoor/ArmoredDoor_Blueprint</texPath>
      </blueprintGraphicData>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_DoorLearnOpeningSpeed</li>
    </placeWorkers>
  </ThingDef>
  
    <ThingDef ParentName="RH_Armored_DoorBase">
    <defName>RH_Armored_Door</defName>
    <label>armored door</label>
    <description>A strong armored door. Divides rooms. Simple doors must be manually opened, which slows people down. The amount of slowdown depends on what the door is made of.</description>
    <graphicData>
      <texPath>Things/Building/Wall/Doors/ArmoredDoor/ArmoredDoor_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Wall/Doors/ArmoredDoor/ArmoredDoor_MenuIcon</uiIconPath>
    <costStuffCount>40</costStuffCount>
	<statBases>
      <WorkToBuild>1050</WorkToBuild>
    </statBases>
  </ThingDef>    
  
  <!-- Camo Netting Flap -->
  
  
  <ThingDef ParentName="DoorBase">
    <defName>RH2_CamoNettingFlap</defName>
    <label>camo netting flap</label>
    <description>A doorway hung with thick overlapping strips of camo netting made of fabric or leather. It allows people to pass while insulating the temperature. Camo netting flaps are commonly used as temporary doors to makeshift shelters.</description>
    <statBases>
      <WorkToBuild>850</WorkToBuild>
      <MaxHitPoints>20</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Wall/Doors/CamoNettingDoor/CamoNettingFlap_Mover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <!-- no damage marks because they don't move with the door -->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Wall/Doors/CamoNettingDoor/CamoNettingFlap_MenuIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <stuffCategories Inherit="False">
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <colorPerStuff>
      <li>
        <stuff>Cloth</stuff>
        <color>(245, 213, 161)</color>
      </li>
    </colorPerStuff>
    <building>
      <roamerCanOpen>true</roamerCanOpen>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Wall/Doors/CamoNettingDoor/CamoNettingFlap_Blueprint</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
      </blueprintGraphicData>
    </building>
  </ThingDef>

  
