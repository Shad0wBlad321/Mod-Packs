<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <!-- ======================== Lighting ======================= -->

  <ThingDef Abstract="True" Name="RH2_FloodlightBase" ParentName="LampBase">
    <graphicData>
      <texPath>Things/Building/Light/Floodlight_south</texPath>
	  <drawSize>(2,2)</drawSize>
    </graphicData>
    <costList>
      <Steel>40</Steel>
    </costList>
    <statBases>
      <Mass>4</Mass>
    </statBases>
	<size>(1,1)</size>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>40</basePowerConsumption>
      </li>
    </comps>
	<designationCategory>Furniture</designationCategory>
  </ThingDef>
  
  <ThingDef ParentName="RH2_FloodlightBase" >
    <defName>RH2_Floodlight_Big</defName>
    <label>floodlight</label>
    <description>Floodlights are broad-beamed, high-intensity artificial lights. They are often used to illuminate outdoor playing fields while an outdoor sports event is being held during low-light conditions. People need light to move and work at full speed.</description>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>30</glowRadius>
        <glowColor>(217,217,208,0)</glowColor>
      </li>
    </comps>
  </ThingDef>
  
