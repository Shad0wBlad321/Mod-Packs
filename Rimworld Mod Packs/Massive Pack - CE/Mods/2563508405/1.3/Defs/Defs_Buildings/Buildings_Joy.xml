<Defs>

<!-- EVERYBODY GET UP ITS TIME TO JAM NOW -->

  <ThingDef ParentName="BuildingBase">
    <defName>RH2_BasketballHoop</defName>
    <label>basketball hoop</label>
    <description>A small basketball hoop for basketball free throws. Everybody get up, it's time to jam now. This activity trains shooting skills.</description>
    <graphicData>
      <texPath>Things/Building/Joy/Basketball/Basketball_Hoop</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <!--<shadowData>
        <volume>(0.08, 0.2, 0.08)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>-->
      <damageData>
        <rect>(0.3,0.3,0.4,0.4)</rect>
      </damageData>
	  <drawSize>(2,2)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <minTechLevelToBuild>Industrial</minTechLevelToBuild>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>150</WorkToBuild>
      <Mass>4</Mass>
      <Flammability>1.0</Flammability>
      <JoyGainFactor>1.0</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
	<defaultPlacingRot>South</defaultPlacingRot>
    <building>
      <joyKind>Gaming_Dexterity</joyKind>
      <watchBuildingStandDistanceRange>5~5</watchBuildingStandDistanceRange>
      <watchBuildingStandRectWidth>6</watchBuildingStandRectWidth>
      <watchBuildingInSameRoom>true</watchBuildingInSameRoom>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
	<size>(2,1)</size>
    <costStuffCount>30</costStuffCount>
    <pathCost>20</pathCost>
    <placeWorkers>
      <li>PlaceWorker_WatchArea</li>
    </placeWorkers>
    <designationCategory>Joy</designationCategory>
    <!--<designationHotKey>Misc1</designationHotKey>-->
  </ThingDef>

