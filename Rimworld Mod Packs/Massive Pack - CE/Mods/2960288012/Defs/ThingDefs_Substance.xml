  <!--============== Absynth ==================-->

  <ThingDef ParentName="SubstanceAbuseBase">
    <defName>Substance_Abuse_Absynth</defName>
    <label>Absynth</label>
    <description>Absinthe is traditionally made by distiling natural herbs into a fine spirt. Absynth has absolutely nothing to do with that, other than the color.</description>
    <descriptionHyperlinks>
      <HediffDef>Substance_Abuse_Absynth_Hediff</HediffDef>
    </descriptionHyperlinks>
