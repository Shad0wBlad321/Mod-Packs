<Defs>
<RecipeDef>
    <defName>FT_ExtractChemFuelByCorpses</defName>
    <label>pyrolyzing corpses (360)</label>
    <description>pyrolyzing 360 kilograms of corpses(about 6 human) and extract into 150 chemfuel. corpses must be biological.</description>
	  <ingredientValueGetterClass>AOBAUtilities.IngredientValueGetter_Mass</ingredientValueGetterClass>
    <jobString>pyrolyzing chemfuel from material</jobString>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <!-- <targetCountAdjustment>20</targetCountAdjustment> -->
    <ingredients>
      <li>
        <filter>
           <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>120</count>
      </li>
    </ingredients>

  	<fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
    </fixedIngredientFilter>

  	<defaultIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
    </defaultIngredientFilter>

    <products>
      <Chemfuel>70</Chemfuel>
    </products>
  </RecipeDef>

<RecipeDef>
    <defName>FT_ExtractChemFuelByJunks</defName>
    <label>pyrolyzing junk (4)</label>
    <description>pyrolyzing 4 kilograms of organical junk and extract into 7 chemfuel. junk must be made of non-smeltable and burnable material.</description>
	  <ingredientValueGetterClass>AOBAUtilities.IngredientValueGetter_Mass</ingredientValueGetterClass>
    <jobString>pyrolyzing chemfuel from material</jobString>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>400</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <!-- <targetCountAdjustment>20</targetCountAdjustment> -->
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Weapons</li>
            <li>Apparel</li>
          </categories>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>

  	<fixedIngredientFilter>
      <categories>
        <li>Weapons</li>
        <li>Apparel</li>
      </categories>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowSmeltable</li>
        <li>AllowSmeltableApparel</li>
        <li>AllowNonBurnableApparel</li>
        <li>AllowNonBurnableWeapons</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>

    <forceHiddenSpecialFilters>
      <li>AllowSmeltable</li>
      <li>AllowSmeltableApparel</li>
      <li>AllowNonBurnableApparel</li>
      <li>AllowNonBurnableWeapons</li>
    </forceHiddenSpecialFilters>

  	<defaultIngredientFilter>
      <categories>
        <li>Weapons</li>
        <li>Apparel</li>
      </categories>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>Apparel_ShieldBelt</li>
        <li>Apparel_SmokepopBelt</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>

    <products>
      <Chemfuel>5</Chemfuel>
    </products>
  </RecipeDef>

