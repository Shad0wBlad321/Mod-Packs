<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MealBDsInstantNoodleBase">
		<defName>Meal_BDsInstantNoodle_Fish</defName>
		<label>fishy fish InstaNoodle</label>
		<description>A complex, long-lasting meal made from dehydrated ingredients, condiments and a self-heating pack. While tastes better than packaged survival meal, it will need a lengthy time to prepare before consumption.</description>
		<graphicData>
			<texPath>Things/Item/Meal/InstaNoodle/Fish</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<comps>
			<li Class="BDsInstantNoodle.CompProperties_EatenGraphic">
				<graphicData>
					<texPath>Things/EatenGraphic/InstaNoodle_f_eaten</texPath>
					<graphicClass>Graphic_Single</graphicClass>
				</graphicData>
			</li>
		</comps>
	</ThingDef>

	<!--============================Recipe==================================-->

	<RecipeDef ParentName="CookMealBDsInstantNoodleBase">
		<defName>CookMeal_BDsInstantNoodle_Fish</defName>
		<label>cook fishy fish InstaNoodle x4</label>
		<description>Cook 4 instant noodle serves from a combination of fish and plant ingredients.</description>
		<jobString>Cooking classic flavor InstaNoodle.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
				</filter>
				<count>1.2</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>1.2</count>
			</li>
		</ingredients>
		<products>
			<Meal_BDsInstantNoodle_Fish>4</Meal_BDsInstantNoodle_Fish>
		</products>
	</RecipeDef>

	<!--============================Bulk==================================-->

	<RecipeDef ParentName="CookMealBDsInstantNoodleBulkBase">
		<defName>CookMeal_BDsInstantNoodleBulk_Fish</defName>
		<label>cook fishy fish InstaNoodle x10</label>
		<description>Cook 10 instant noodle serves from a combination of fish and plant ingredients.</description>
		<jobString>Cooking classic flavor InstaNoodle.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Meal_BDsInstantNoodle_Fish>10</Meal_BDsInstantNoodle_Fish>
		</products>
	</RecipeDef>

</Defs>