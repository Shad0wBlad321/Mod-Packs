  <isBad>true</isBad>
  <initialSeverity>0.01</initialSeverity>
  <maxSeverity>1</maxSeverity>
  <comps>
  <li Class="HediffCompProperties_SeverityPerDay">
      <severityPerDay>-6.0</severityPerDay>
   </li>
  </comps>
  <stages>
    <li>
      <label>Slightly melted</label>
      <painFactor>1.2</painFactor>
      <capMods>
      </capMods>
      <statFactors>
      </statFactors>
      <statOffsets>
            <ArmorRating_Heat>-0.2</ArmorRating_Heat>
      </statOffsets>
    </li>
    <li>
      <label>Heavily melted</label>
      <minSeverity>0.2</minSeverity>
      <painFactor>1.4</painFactor>
      <capMods>
      </capMods>
      <statFactors>
      </statFactors>
      <statOffsets>
            <ArmorRating_Heat>-0.4</ArmorRating_Heat>
      </statOffsets>
    </li>
    <li>
      <label>Fully melted</label>
      <minSeverity>0.3</minSeverity>
      <painFactor>1.6</painFactor>
      <capMods>
      </capMods>
      <statFactors>
      </statFactors>
      <statOffsets>
            <ArmorRating_Heat>-0.8</ArmorRating_Heat>
      </statOffsets>
    </li>
  </stages>

</HediffDef>

</Defs>