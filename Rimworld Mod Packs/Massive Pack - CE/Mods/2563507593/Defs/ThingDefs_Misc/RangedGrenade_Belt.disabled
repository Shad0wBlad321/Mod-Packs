      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <skillRequirements>
        <Crafting>5</Crafting>
        <Intellectual>8</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>15</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <graphicData>
