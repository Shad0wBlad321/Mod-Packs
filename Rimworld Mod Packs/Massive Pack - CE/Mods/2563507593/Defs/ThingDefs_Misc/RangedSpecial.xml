    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponSpecial/OrbitalTargeter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5000</MarketValue>
      <Mass>0.2</Mass>
      <Beauty>-3</Beauty>
      <Flammability>0.5</Flammability>
	  	
		<WorkToMake>85000</WorkToMake>
		<costList>
		<Steel>55</Steel>
