  <!-- High-explosive -->

  <ThingDef ParentName="MakeableShellBase">
    <defName>RN2Shell_60mmShell_HighExplosive</defName>
    <label>M49A2 high-explosive shell</label>
    <description>A shell filled with high explosives. Can be fired from mortars or installed as a trap. Explodes when damaged.</description>
    <graphicData>
      <texPath>Things/Building/Security/M2_Mortar/60mm_Shell</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>RN2Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>RNBullet_Shell_60mm</projectileWhenLoaded>
    <costList>
      <Steel>25</Steel>
      <Chemfuel>15</Chemfuel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Mortars</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>RNBullet_Shell_60mm</defName>
    <label>M49A2 high-explosive shell</label>
    <graphicData>
      <texPath>Things/Building/Security/M2_Mortar/Projectile/60mm_Shell_Projectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
	  <drawSize>(1.2,1.2)</drawSize>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>RN2Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>55</speed>
      <explosionRadius>3</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>RNExplosion</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

</Defs>
