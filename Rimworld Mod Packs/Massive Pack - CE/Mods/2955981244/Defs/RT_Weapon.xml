<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>RTMI_Gun_Autocannon</defName>
		<label>2A72S autocannon</label>
		<description>A prototype mobile infantry autocannon based on Vehicle mounted weapon.</description>
		<graphicData>
			<texPath>Things/Weapon/2A72S</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.75</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<researchPrerequisite>HeavyTurrets</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
		</recipeMaker>
		<weaponTags Inherit='False'>
			<li>HeavyGun</li>
			<li>MobileInfantry</li>
		</weaponTags>
		<statBases>
			<MarketValue>1550</MarketValue>
			<AccuracyTouch>0.50</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.86</AccuracyMedium>
			<AccuracyLong>0.88</AccuracyLong>
			<RangedWeapon_Cooldown>1.56</RangedWeapon_Cooldown>
			<Mass>24</Mass>
			<Flammability>0</Flammability>
      		<WorkToMake>20000</WorkToMake>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.2</MoveSpeed>
		</equippedStatOffsets>
		<costList>
			<Steel>205</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>HeavyWeapons.Verb_Shoot</verbClass>
				<defaultProjectile>Bullet_AutocannonTurret</defaultProjectile>
				<hasStandardCommand>true</hasStandardCommand>
				<warmupTime>0.2</warmupTime>
				<minRange>1.9</minRange>
				<range>70.9</range>
				<ticksBetweenBurstShots>15</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>4</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>4</cooldownTime>
			</li>
		</tools>
		<modExtensions>
			<li Class="HeavyWeapons.HeavyWeapon">
				<isHeavy>true</isHeavy>
				<supportedArmors>
					<li MayRequire="VanillaExpanded.VWEHW" >VWE_Apparel_Exoframe</li>
					<li>RTMI_MobileSuit</li>
				</supportedArmors>
				<supportedTraits>
					<li>Tough</li>
				</supportedTraits>
				<disableOptionLabelKey>RTMI.CannotEquipHeavy</disableOptionLabelKey>
			</li>
		</modExtensions>
	</ThingDef>

