<?xml version="1.0" encoding="utf-8" ?>

<Patch>	
	<!-- Centipede base -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[@Name="MechCentipede"]/butcherProducts</xpath>
		<value>	
			<butcherProducts>			
				  <Steel>50</Steel>				  
				  <Plasteel>20</Plasteel>
				  <Gold>15</Gold>
				  <ComponentIndustrial>1</ComponentIndustrial>
			</butcherProducts>				
		</value>
	</Operation>
	
	<!-- Walker (lancer/scyther) base. Note LancerMechanoidWalker inherits from this  -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[@Name="BaseMechanoidWalker"]/butcherProducts</xpath>
		<value>
			<butcherProducts>
			  <Steel>25</Steel>
			  <Plasteel>10</Plasteel>
			  <Gold>5</Gold>
			</butcherProducts>
		</value>
	</Operation>

	
