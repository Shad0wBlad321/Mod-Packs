<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[O21] Outer Rim Galaxies</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>
			
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="O21_OR_Bodysuit"]/statBases</xpath>
				<value>
					<Bulk>10</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_Bodysuit"]/statBases/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>300</MaxHitPoints>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_Bodysuit"]/statBases/Mass</xpath>
				<value>
					<Mass>1</Mass>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_Bodysuit"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_Bodysuit"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.9</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_DroidArmorModule"]/statBases/Mass</xpath>
				<value>
					<Mass>13</Mass>
					<Bulk>25</Bulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="O21_OR_DroidArmorModule"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
				</value>
			</li>
			
			
		</operations>
		</match>
	</Operation>
	
</Patch>