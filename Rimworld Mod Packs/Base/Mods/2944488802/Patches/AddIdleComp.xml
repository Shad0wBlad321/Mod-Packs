<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Adds the IdleControllerComp to all pawns -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@Name="BasePawn"]/comps</xpath>
    <value>
      <li>
        <compClass>AM.Idle.IdleControllerComp</compClass>
      </li>
    </value>
  </Operation>
</Patch>